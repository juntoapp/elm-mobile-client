{
    "name": "io.pallab.junto",
    "displayName": "junto",
    "version": "1.0.0",
    "description": "A sample Apache Cordova application that responds to the deviceready event.",
    "main": "index.js",
    "scripts": {
        "build-elm": "elm-make --yes src/Main.elm --output www/js/elm.js",
        "watch-elm": "chokidar 'src/**/*.*' -c 'npm run build-elm --silent'",
        "build-css": "node-sass --include-path scss scss/main.scss   www/css/index.css",
        "watch-css": "chokidar 'scss/**/*.*' -c 'npm run build-css --silent'",
        "watch-www": "chokidar 'www/**/*.*' -c 'cordova prepare browser'",
        "serve": "cordova run browser",
        "watch": "npm run build-elm --silent && concurrently --raw \"npm run watch-elm\" \"npm run watch-www\" \"npm run watch-css\" \"npm run serve\""
    },
    "author": "Apache Cordova Team",
    "license": "Apache-2.0",
    "dependencies": {
        "cordova-android": "^6.2.3",
        "cordova-browser": "^4.1.0",
        "cordova-plugin-whitelist": "^1.3.2"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "android",
            "browser"
        ]
    },
    "devDependencies": {
        "chokidar-cli": "^1.2.0",
        "concurrently": "^3.5.0",
        "node-sass": "^4.5.3"
    }
}